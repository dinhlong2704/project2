<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_disease"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/txt_medicalRecord"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_anhbenhan"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginHorizontal="20dp"
        android:src="@mipmap/im_maubenhan" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Ten Benh An" />

    <EditText
        android:id="@+id/edt_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="20/12/2023" />


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/bt_chonhinh"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Chọn ảnh"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/bt_chuphinh"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:text="Chụp ảnh"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </TableRow>
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/bt_luu"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:text="Lưu"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/bt_huy"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />


    </TableRow>


</LinearLayout>